{
  "name": "@gc-utils/release",
  "version": "0.3.0",
  "description": "gc-utils release script",
  "bin": {
    "release": "src/cli.mjs"
  },
  "type": "module",
  "main": "./src/index.mjs",
  "exports": {
    ".": {
      "import": "./src/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "module": "./src/index.mjs",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "license": "MIT",
  "author": "Ghislain B.",
  "homepage": "https://github.com/ghiscoding/gc-utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghiscoding/gc-utils.git",
    "directory": "packages/release"
  },
  "bugs": {
    "url": "https://github.com/ghiscoding/gc-utils/issues"
  },
  "scripts": {
    "build": "echo build",
    "preview:release": "node src/cli.mjs --dry-run --skip-checks --build-script build --create-release github",
    "release": "node src/cli.mjs --build-script build"
  },
  "dependencies": {
    "@gc-utils/fs-extra": "workspace:*",
    "@octokit/rest": "^22.0.0",
    "conventional-changelog": "^7.0.2",
    "conventional-changelog-angular": "^8.0.0",
    "dotenv": "^16.5.0",
    "git-url-parse": "^16.1.0",
    "new-github-release-url": "^2.0.0",
    "semver": "^7.7.2",
    "tinyexec": "^1.0.1",
    "tinyglobby": "^0.2.14",
    "untildify": "^5.0.0"
  },
  "engines": {
    "node": ">=22.13.0"
  }
}